	<bean id="helloBean" class="com.mycompany.camel.spring.dm.HelloBean">
		<property name="say" value="Hi from Camel" />
	</bean>

	<camelContext xmlns="http://camel.apache.org/schema/spring">
		<route>
			<from uri="timer:foo?period=5000" />
			<setBody>
