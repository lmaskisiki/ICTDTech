package birthtech.services.rest;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import birthtech.entities.Child;

 
@RestController
public class RestServices {
	
	@RequestMapping( value="/home/{name}", method=RequestMethod.GET)
	public Child serviceTest(@PathVariable String name){
		System.out.println("Masikisiki Lizo Printed from a service");
		Child c= new Child();
		c.setGender("Male");
		c.setName("Bukhanye");
		
		return c;
	}

}
